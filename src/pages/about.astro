---
import Layout from '../layouts/Layout.astro';
import InstaFeed from '../components/InstaFeed.astro';
import ReviewsWidget from '../components/ReviewsWidget.astro';
import Team from '../components/Team.astro';
---

<Layout title="À propos">

  <div class="pt-10 pb-2 px-6 bg-sand text-center">
    <h1 class="text-3xl md:text-5xl font-serif font-bold text-ocean">À propos de nous</h1>
  </div>

  <section class="pt-6 pb-12 px-6 bg-sand">
    <div class="max-w-3xl mx-auto text-center">
        <div>
          <h2 class="text-2xl font-serif text-ocean mb-4">L'Esprit</h2>
          <p class="text-lg text-stone-600 leading-relaxed font-light">
              Nous avons créé Global Surf pour une raison simple : revenir à l'essence du surf.
              Loin des foules, nous partageons une approche authentique, respectueuse de la culture locale et de l'océan.
          </p>
      </div>
  </div>
</section>

<Team />

<div class="bg-sand border-t border-stone-100/50">
    <ReviewsWidget />
</div>

<InstaFeed />

<section class="py-10 px-4 bg-sand border-t border-stone-200">
  <div class="max-w-4xl mx-auto text-center">

    <h2 class="text-3xl font-serif text-ocean mb-2">Une question ? Un projet ?</h2>
    <p class="text-stone-500 mb-10 font-light">On adore discuter. Écrivez-nous !</p>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 items-start">

        <div class="flex flex-col items-center group">
            <div class="w-12 h-12 rounded-full bg-white flex items-center justify-center text-ocean mb-4 shadow-sm group-hover:scale-110 transition-transform">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
                </svg>
            </div>
            <a href="mailto:temp@gmail.com" class="text-lg font-serif text-dark hover:text-terra transition-colors font-bold">
                temp@gmail.com
            </a>
            <span class="text-xs text-stone-400 mt-1 uppercase tracking-wide">Réponse sous 24h</span>
        </div>

        <div class="flex flex-col items-center group">
            <div class="w-12 h-12 rounded-full bg-white flex items-center justify-center text-ocean mb-4 shadow-sm group-hover:scale-110 transition-transform">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M8.625 12a.375.375 0 11-.75 0 .375.375 0 01.75 0zm0 0H8.25m4.125 0a.375.375 0 11-.75 0 .375.375 0 01.75 0zm0 0H12m4.125 0a.375.375 0 11-.75 0 .375.375 0 01.75 0zm0 0h-.375M21 12c0 4.556-4.03 8.25-9 8.25a9.764 9.764 0 01-2.555-.337A5.972 5.972 0 015.41 20.97a5.969 5.969 0 01-.474-.065 4.48 4.48 0 00.978-2.025c.09-.457-.133-.901-.467-1.226C3.93 16.178 3 14.189 3 12c0-4.556 4.03-8.25 9-8.25s9 3.694 9 8.25z" />
                </svg>
            </div>
            <a href="https://wa.me/212600000000" target="_blank" class="text-lg font-serif text-dark hover:text-terra transition-colors font-bold">
                +212 6 00 00 00
            </a>
            <span class="text-xs text-stone-400 mt-1 uppercase tracking-wide">Direct & Rapide</span>
        </div>

        <div class="flex flex-col items-center group">
            <div class="w-12 h-12 rounded-full bg-white flex items-center justify-center text-ocean mb-4 shadow-sm group-hover:scale-110 transition-transform">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
                </svg>
            </div>
            <a href="https://maps.google.com" target="_blank" class="text-lg font-serif text-dark hover:text-terra transition-colors font-bold">
                Sidi Kaouki
            </a>
            <span class="text-xs text-stone-400 mt-1 uppercase tracking-wide">Maroc • Essaouira</span>
        </div>

    </div>
  </div>
</section>

</Layout>
