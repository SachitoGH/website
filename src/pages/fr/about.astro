---
import FeaturesGrid from '../../components/FeaturesGrid.astro';
import Layout from '../../layouts/Layout.astro';
import InstaFeed from '../../components/InstaFeed.astro';
import Team from '../../components/Team.astro';
import { contactFeatures } from '../../data/features';
---

<Layout title="À propos">

  <section class="pt-10 pb-20 px-6 bg-sand text-center">
    <div class="mb-12">
        <h1 class="text-3xl md:text-5xl font-serif font-bold text-ocean">À propos de nous</h1>
    </div>
    <div class="max-w-3xl mx-auto">
        <h2 class="text-2xl font-serif text-ocean mb-6">L'Esprit</h2>
        <p class="text-lg text-stone-600 leading-relaxed font-light">
            Nous avons créé Global Surf pour une raison simple : revenir à l'essence du surf.
            Loin des foules, nous partageons une approche authentique, respectueuse de la culture locale et de l'océan.
        </p>
    </div>
  </section>

  <Team />

  <InstaFeed />

  <FeaturesGrid
    features={contactFeatures}
    title="Une question ? Un projet ?"
    subtitle="On adore discuter. Écrivez-nous !"
    bgColor="bg-light"
    iconBgColor="bg-sand"
  />

</Layout>
