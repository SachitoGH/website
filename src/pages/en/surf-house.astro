---
import Layout from '../../layouts/Layout.astro';
import FeaturesGrid from '../../components/FeaturesGrid.astro';
import { houseFeatures } from '../../data/features';

const gallery = [
    'https://images.unsplash.com/photo-1520250497591-112f2f40a3f4?w=800',
    'https://images.unsplash.com/photo-1582719478250-c89cae4dc85b?w=800',
    'https://images.unsplash.com/photo-1507525428034-b723cf961d3e?w=800',
    'https://images.unsplash.com/photo-1493246507139-91e8fad9978e?w=800'
];
---

<Layout title="Surf House | Stay in Sidi Kaouki">
  <div class="pt-10 pb-20 max-w-7xl mx-auto px-4">

    <div class="text-center max-w-3xl mx-auto mb-16">
      <h1 class="text-5xl font-serif font-bold text-ocean mb-6">The Surf House</h1>
      <p class="text-xl text-stone-600 font-light">
        A haven of peace facing the ocean. Traditional Berber architecture mixed with modern comfort.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-12">
      {gallery.map((img, index) => (
        <div class={`rounded-2xl overflow-hidden h-64 ${index === 0 ? 'md:col-span-2 md:row-span-2 md:h-full' : ''}`}>
          <img src={img} class="w-full h-full object-cover hover:scale-105 transition duration-700" alt="Surf house ambience" />
        </div>
      ))}
    </div>


    <div class="grid md:grid-cols-2 gap-12 items-center">
        <div>
            <h2 class="text-3xl font-serif text-ocean mb-4">The Main Hostel</h2>
            <p class="text-stone-600 mb-6 leading-relaxed">
                Our double rooms and cozy dorms are designed for your rest. Enjoy the large common living room, the rooftop terrace for morning yoga classes, and our open kitchen.
                <br/><br/>
                Experience an authentic community vibe with other ocean enthusiasts.
            </p>
        </div>

        <div class="bg-sand/50 p-8 rounded-2xl border border-stone-200">
            <h3 class="text-xl font-bold text-dark mb-4">Accommodation Partners</h3>
            <p class="text-sm text-stone-500 mb-6 font-light">For more privacy or specific needs, we collaborate with the best neighboring establishments.</p>
            <div class="space-y-4">
                <div class="bg-white p-4 rounded-xl shadow-sm flex items-center justify-between group hover:shadow-md transition">
                    <span class="font-medium text-dark">Dar Aliz√©s (Luxury)</span>
                    <span class="text-[10px] uppercase tracking-wider bg-stone-100 text-stone-500 px-3 py-1 rounded-full">2 min away</span>
                </div>
                <div class="bg-white p-4 rounded-xl shadow-sm flex items-center justify-between group hover:shadow-md transition">
                    <span class="font-medium text-dark">Blue Kaouki (Apartments)</span>
                    <span class="text-[10px] uppercase tracking-wider bg-stone-100 text-stone-500 px-3 py-1 rounded-full">5 min away</span>
                </div>
            </div>
        </div>
    </div>
  </div>
  <div>
    <FeaturesGrid
      features={houseFeatures.map(f => ({
        ...f,
        title: f.titleEn || f.title,
        description: f.descriptionEn || f.description
      }))}
      bgColor="bg-transparent"
      iconBgColor="bg-light"
    />
  </div>
</Layout>
