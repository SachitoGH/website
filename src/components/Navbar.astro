---
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import { languages } from '../i18n/ui';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const l = (path: string) => `/${lang}${path}`;

const currentPath = Astro.url.pathname;
const frPath = currentPath.replace(/^\/en/, '/fr');
const enPath = currentPath.replace(/^\/fr/, '/en');

const links = [
  { name: t('nav.home'), href: l('/') },
  { name: t('nav.surf'), href: l('/surf') },
  { name: t('nav.trips'), href: l('/trips') },
  { name: t('nav.stays'), href: l('/sejours') },
  { name: t('nav.experiences'), href: l('/experiences') },
  { name: t('nav.surf-house'), href: l('/surf-house') },
  { name: t('nav.about'), href: l('/about') },
];
---

<nav id="navbar" class="bg-sand/70 backdrop-blur-lg fixed w-full z-50 border-b border-white/40 shadow-sm transition-transform duration-300 py-2">
  <div class="w-full px-4 sm:px-6 lg:px-8 xl:px-12">

    <div class="flex justify-between items-center gap-4 md:gap-8 relative z-50">

      <a href={l('/')} class="flex items-center shrink-0">
        <img
            src="/logo-dark.png"
            alt="Global Surf School Sidi Kaouki"
            class="h-16 md:h-24 w-auto object-contain hover:opacity-90 transition-opacity"
        />
      </a>

      <div class="hidden md:flex items-center gap-6">
        <div class="flex space-x-4 lg:space-x-6">
            {links.map(link => (
            <a href={link.href} class="text-dark hover:text-ocean font-bold text-xs lg:text-sm uppercase tracking-widest transition-colors py-2">
                {link.name}
            </a>
            ))}
        </div>

        <div class="flex items-center space-x-2 text-xs font-bold uppercase tracking-widest text-dark mr-4">
          <a href={frPath} class={`hover:text-ocean transition-colors ${lang === 'fr' ? 'text-ocean underline decoration-2 underline-offset-4' : 'opacity-60'}`}>FR</a>
          <span class="opacity-30">|</span>
          <a href={enPath} class={`hover:text-ocean transition-colors ${lang === 'en' ? 'text-ocean underline decoration-2 underline-offset-4' : 'opacity-60'}`}>EN</a>
        </div>

        <a href="#book" data-formula="general" class="js-open-booking bg-terra text-white px-6 py-3 lg:px-8 rounded-full font-bold uppercase tracking-widest text-xs shadow-lg hover:bg-terra/80 hover:shadow-xl hover:-translate-y-0.5 transition-all duration-300 transform">
          {t('nav.book')}
        </a>
      </div>

      <div class="md:hidden flex items-center gap-4">
        <div class="flex items-center space-x-2 text-xs font-bold uppercase tracking-widest text-dark">
            <a href={frPath} class={`${lang === 'fr' ? 'text-ocean' : 'opacity-60'}`}>FR</a>
            <span class="opacity-30">|</span>
            <a href={enPath} class={`${lang === 'en' ? 'text-ocean' : 'opacity-60'}`}>EN</a>
        </div>

         <button id="menu-toggle" class="group relative text-dark p-2 hover:bg-dark/5 rounded-full transition focus:outline-none w-12 h-12 flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-8 h-8 transition-all duration-300 ease-in-out group-[.is-open]:opacity-0 group-[.is-open]:rotate-90 scale-100 absolute">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
            </svg>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-8 h-8 transition-all duration-300 ease-in-out opacity-0 -rotate-90 group-[.is-open]:opacity-100 group-[.is-open]:rotate-0 scale-100 absolute">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
            </svg>
         </button>
      </div>
    </div>
  </div>

  <div id="mobile-menu" class="fixed inset-0 bg-sand/95 backdrop-blur-xl z-40 flex flex-col items-center justify-start pt-36 h-screen w-full invisible opacity-0 -translate-y-4 transition-all duration-500 ease-in-out">
    <div class="flex flex-col space-y-8 text-center">
        {links.map(link => (
          <a href={link.href} class="text-3xl font-serif text-dark hover:text-terra transition-colors block font-medium">
              {link.name}
          </a>
        ))}
        <div class="pt-8">
          <a href="#book" data-formula="general" class="js-open-booking bg-terra text-white px-12 py-5 rounded-full font-bold uppercase tracking-widest text-lg shadow-lg inline-block">
            {t('nav.book')}
          </a>
        </div>
    </div>
  </div>
</nav>

<script>
  const menuToggle = document.getElementById('menu-toggle');
  const mobileMenu = document.getElementById('mobile-menu');
  const navbar = document.getElementById('navbar');

  if (menuToggle && mobileMenu) {
    menuToggle.addEventListener('click', () => {
      const isOpen = menuToggle.classList.contains('is-open');

      // Toggle classes
      menuToggle.classList.toggle('is-open');

      if (!isOpen) {
        // Open menu
        mobileMenu.classList.remove('invisible', 'opacity-0', '-translate-y-4');
        mobileMenu.classList.add('visible', 'opacity-100', 'translate-y-0');
        document.body.style.overflow = 'hidden'; // Empêche le scroll
      } else {
        // Close menu
        mobileMenu.classList.add('invisible', 'opacity-0', '-translate-y-4');
        mobileMenu.classList.remove('visible', 'opacity-100', 'translate-y-0');
        document.body.style.overflow = ''; // Réactive le scroll
      }
    });

    // Fermer le menu si on clique sur un lien
    const links = mobileMenu.querySelectorAll('a');
    links.forEach(link => {
        link.addEventListener('click', () => {
            menuToggle.classList.remove('is-open');
            mobileMenu.classList.add('invisible', 'opacity-0', '-translate-y-4');
            mobileMenu.classList.remove('visible', 'opacity-100', 'translate-y-0');
            document.body.style.overflow = '';
        });
    });
  }
</script>
