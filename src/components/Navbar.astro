---
const links = [
  { name: 'Surf', href: '/surf' },
  { name: 'Trips', href: '/trips' },
  { name: 'Séjours', href: '/sejours' },
  { name: 'Expériences', href: '/experiences' },
  { name: 'Surf House', href: '/surf-house' },
  { name: 'À propos', href: '/about' },
];
---

<nav id="navbar" class="bg-sand/70 backdrop-blur-lg fixed w-full z-50 border-b border-white/40 shadow-sm transition-transform duration-300 py-2">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

    <div class="flex justify-between items-center gap-4 md:gap-8 relative z-50">

      <a href="/" class="flex items-center shrink-0">
        <img
            src="/logo-dark.png"
            alt="Global Surf School Sidi Kaouki"
            class="h-16 md:h-24 w-auto object-contain hover:opacity-90 transition-opacity"
        />
      </a>

      <div class="hidden md:flex items-center gap-6">
        <div class="flex space-x-4 lg:space-x-6">
            {links.map(link => (
            <a href={link.href} class="text-dark hover:text-ocean font-bold text-xs lg:text-sm uppercase tracking-widest transition-colors py-2">
                {link.name}
            </a>
            ))}
        </div>

        <a href="#book" data-formula="general" class="js-open-booking bg-terra text-white px-6 py-3 lg:px-8 rounded-full font-bold uppercase tracking-widest text-xs shadow-lg hover:bg-terra/80 hover:shadow-xl hover:-translate-y-0.5 transition-all duration-300 transform">
          Réserver
        </a>
      </div>

      <div class="md:hidden flex items-center">
         <button id="menu-toggle" class="group relative text-dark p-2 hover:bg-dark/5 rounded-full transition focus:outline-none w-12 h-12 flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-8 h-8 transition-all duration-300 ease-in-out group-[.is-open]:opacity-0 group-[.is-open]:rotate-90 scale-100 absolute">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
            </svg>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-8 h-8 transition-all duration-300 ease-in-out opacity-0 -rotate-90 group-[.is-open]:opacity-100 group-[.is-open]:rotate-0 scale-100 absolute">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
            </svg>
         </button>
      </div>
    </div>
  </div>

  <div id="mobile-menu" class="fixed inset-0 bg-sand/95 backdrop-blur-xl z-40 flex flex-col items-center justify-start pt-36 h-screen w-full invisible opacity-0 -translate-y-4 transition-all duration-500 ease-in-out">
    <div class="flex flex-col space-y-8 text-center">
        {links.map(link => (
          <a href={link.href} class="text-3xl font-serif text-dark hover:text-terra transition-colors block font-medium">
              {link.name}
          </a>
        ))}
        <div class="pt-8">
          <a href="#book" data-formula="general" class="js-open-booking bg-terra text-white px-12 py-5 rounded-full font-bold uppercase tracking-widest text-lg shadow-lg inline-block">
            Réserver
          </a>
        </div>
    </div>
  </div>
</nav>

<script>
document.addEventListener('DOMContentLoaded', () => {
  const btn = document.getElementById('menu-toggle');
  const menu = document.getElementById('mobile-menu');
  const navbar = document.getElementById('navbar');
  const body = document.body;

  // -----------------------------
  // Toggle menu mobile
  // -----------------------------
  const toggleMenu = () => {
    btn?.classList.toggle('is-open');
    menu?.classList.toggle('invisible');
    menu?.classList.toggle('opacity-0');
    menu?.classList.toggle('-translate-y-4');
    body.style.overflow = menu?.classList.contains('invisible') ? 'auto' : 'hidden';
  };

  if (btn && menu) {
    btn.addEventListener('click', toggleMenu);
    menu.querySelectorAll('a').forEach(link => {
      link.addEventListener('click', () => {
        btn.classList.remove('is-open');
        menu.classList.add('invisible', 'opacity-0', '-translate-y-4');
        body.style.overflow = 'auto';
      });
    });
  }

  // -----------------------------
  // Smart header scroll behavior
  // -----------------------------
  let lastScroll = 0;
  const downThreshold = 10; // scroll down nécessaire pour cacher
  const upThreshold = 1;    // scroll up nécessaire pour réafficher

  window.addEventListener('scroll', () => {
    const currentScroll = window.pageYOffset || document.documentElement.scrollTop;
    const diff = currentScroll - lastScroll;

    // Mobile uniquement
    if (window.innerWidth < 768) {
      if (diff > downThreshold && currentScroll > 50) {
        // Scroll down -> cacher navbar
        navbar.style.transform = 'translateY(-100%)';
      } else if (diff < -upThreshold || currentScroll < 50) {
        // Scroll up -> montrer immédiatement
        navbar.style.transform = 'translateY(0)';
      }
    } else {
      // Desktop -> sticky
      navbar.style.transform = 'translateY(0)';
    }

    lastScroll = currentScroll <= 0 ? 0 : currentScroll;
  });

  // -----------------------------
  // Redimensionnement
  // -----------------------------
  window.addEventListener('resize', () => {
    if (window.innerWidth >= 768) {
      navbar.style.transform = 'translateY(0)';
    }
  });
});
</script>
