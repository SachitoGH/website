---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const photos = [
    "https://images.unsplash.com/photo-1502680390469-be75c86b636f?w=600",
    "https://images.unsplash.com/photo-1520250497591-112f2f40a3f4?w=600",
    "https://images.unsplash.com/photo-1539020140153-e479b8c22e70?w=600",
    "https://images.unsplash.com/photo-1471922694854-ff1b63b20054?w=600"
];
---

<section class="py-16 bg-sand border-t border-stone-200/50">
    <div class="max-w-7xl mx-auto px-4">

        <div class="text-center mb-10">
            <h2 class="text-2xl font-serif text-ocean mb-1">{t('insta.follow')}</h2>
            <a href="https://www.instagram.com/globalsurfsidikaouki/" target="_blank" class="text-sm font-bold uppercase tracking-widest text-terra hover:text-dark transition-colors duration-300">
                @globalsurfsidikaouki
            </a>
        </div>

        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 md:gap-6">
            {photos.map(photo => (
                <a href="https://www.instagram.com/globalsurfsidikaouki/" target="_blank" class="block relative group overflow-hidden rounded-xl aspect-square shadow-sm hover:shadow-md transition-all duration-300">
                    <div class="absolute inset-0 bg-ocean/20 opacity-0 group-hover:opacity-100 transition-opacity duration-300 z-10"></div>
                    <img
                        src={photo}
                        class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                        alt="Instagram Global Surf"
                    />
                </a>
            ))}
        </div>

    </div>
</section>
