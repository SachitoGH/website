---
import { teamMembers } from '../data/team';
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="py-16 px-4 bg-light">
  <div class="max-w-5xl mx-auto text-center">

    <h2 class="text-2xl font-serif text-ocean mb-12">{t('team.title')}</h2>

    <div class="grid grid-cols-2 md:grid-cols-4 gap-12 justify-center items-start">
      {teamMembers.map((member) => (
        <div class="flex flex-col items-center group">

          <div class="w-24 h-24 rounded-full overflow-hidden shadow-sm mb-4 border-2 border-transparent group-hover:border-terra/20 transition-all duration-300">
            <img
              src={member.image}
              alt={member.name}
              class="w-full h-full object-cover"
            />
          </div>

          <h3 class="text-lg font-serif text-dark mb-1">{member.name}</h3>
          <p class="text-[10px] font-bold uppercase tracking-widest text-terra opacity-70">
            {(lang === 'en' && member.roleEn) ? member.roleEn : member.role}
          </p>
        </div>
      ))}
    </div>

  </div>
</section>
